<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="road-mapper">

    <!-- 모든 가로수길 목록 조회 -->
    <select id="getRoadList" resultType="roadvo">
        SELECT * FROM road_db.road_tbl limit 20
    </select>

    <!-- 제공기관이 주소랑 같음 -->
    <select id="searchRoadsByAddress" resultType="roadvo">
        SELECT * FROM road_db.road_tbl
        WHERE r_ce_ad LIKE #{searchKeyword} limit 20
    </select>

</mapper>