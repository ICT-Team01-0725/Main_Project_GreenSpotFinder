<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="park-mapper">

    <!-- 상위 4개 공원 가져오기 -->
    <select id="getTop4Parks" resultType="com.ict.edu.parkvo.ParkVO">
    SELECT * FROM park_db.park_tbl
    ORDER BY p_ad ASC
    LIMIT 4
</select>

    <!-- 주소로 공원 검색하기 -->
    <select id="searchParksByAddress" resultType="com.ict.edu.parkvo.ParkVO">
        SELECT * FROM park_db.park_tbl
        WHERE p_ad LIKE CONCAT('%', #{p_ad}, '%')
        LIMIT 4
    </select>
    
       <!-- 지역별 공원 목록 조회 -->
    <select id="getParksByRegion" resultType="com.ict.edu.parkvo.ParkVO">
        SELECT * FROM park_db.park_tbl
        WHERE p_ad LIKE CONCAT('%', #{region}, '%') 
        LIMIT 4
    </select>
    
    
</mapper>
